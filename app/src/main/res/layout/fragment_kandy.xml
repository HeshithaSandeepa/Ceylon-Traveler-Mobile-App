<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.KandyFragment">
    <Button
        android:id="@+id/favorite_icon"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_favorite_red_24dp"
        android:clickable="true"
        android:padding="16dp" />
    <TextView
        android:id="@+id/Kandy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="Kandy"
        android:textSize="30sp" />

    <VideoView
        android:layout_below="@+id/Kandy"
        android:id="@+id/videoKandy"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_below="@+id/videoKandy"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapViewKandy"
                android:layout_width="415dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/getDirectionKandy"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="1dp"
                android:text="get directions" />

            <TextView
                android:id="@+id/discriptionKandy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Kandy"
                android:text="@string/kandyDiscription" />

            <TextView
                android:id="@+id/imagesKandy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text=" Kandy Popular Sights"
                android:textSize="30sp" />
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:outlineSpotShadowColor="@color/black"
    >


    <ImageView
        android:id="@+id/kandyImage1"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/kandy" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="20dp"
        android:text="Temple of the Tooth Relic(දළදා මාලිගාව)"
        />

    <Button
        android:id="@+id/btnDaladamaligawa"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="280dp"

        android:text="View Details ->" />


</FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/black"
                >


                <ImageView
                    android:id="@+id/kandyImage3"
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/royalbotanicalgarden" />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginStart="20dp"
                    android:text="Royal Botanical Garden"
                    />

                <Button
                    android:id="@+id/btnRoyalbotanical"
                    android:layout_width="176dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="280dp"

                    android:text="View Details ->" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/black"
                >


                <ImageView
                    android:id="@+id/kandyImage2"
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/kandyviewpoint" />
                <TextView
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginStart="20dp"
                    android:text="Kandy View Point"
                    />

                <Button
                    android:id="@+id/btnkandyViewpoint"
                    android:layout_width="176dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="280dp"

                    android:text="View Details ->" />


            </FrameLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>